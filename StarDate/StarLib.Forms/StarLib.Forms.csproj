<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Description>Modern Blazor components for the Cosmic Calendar with ISO Week support</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <Company>Order of Life</Company>
    <Authors>Silicon Prophet</Authors>
    <PackageProjectUrl>https://order.life/software</PackageProjectUrl>
    <!-- PackageIcon>zodiac.ico</PackageIcon -->
    <RepositoryType>Library</RepositoryType>
    <RepositoryUrl>https://github.com/siliconprophet/StarDate</RepositoryUrl>
    <PackageTags>Order of Life, Calendar, StarDate, Blazor, ISO Week</PackageTags>
    <PackageReleaseNotes>Version 2.0.0: Modern .NET 9 Blazor components with ISO Week alignment</PackageReleaseNotes>
    <PackageId>StarDate.Forms</PackageId>
    <Version>2.0.0</Version>
    
    <!-- Modern .NET features -->
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
  </PropertyGroup>

  <ItemGroup>
    <!-- Modern Blazor 9.0 components -->
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="9.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\StarLib\StarLib.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\StarLib\zodiac.ico">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
